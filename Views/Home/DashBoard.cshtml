@{
    ViewData["Title"] = "Dashboard";
}

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f4f4;
        color: #333;
        margin: 0;
        padding: 0;
    }

    h1 {
        text-align: center;
        margin-bottom: 20px;
        color: #007bff;
    }

    .user-info {
        text-align: center;
        margin-bottom: 20px;
    }

    .logout-link {
        text-align: center;
        margin-bottom: 30px;
    }

    form {
        max-width: 400px;
        margin: 0 auto;
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    label {
        display: block;
        margin-bottom: 8px;
        color: #333;
    }

    .form-group {
        margin-bottom: 20px;
    }

    input[type="text"] {
        width: 100%;
        padding: 8px;
        box-sizing: border-box;
        border: 1px solid #ccc;
        border-radius: 4px;
        margin-bottom: 12px;
    }

    select {
        width: 100%;
        padding: 8px;
        box-sizing: border-box;
        border: 1px solid #ccc;
        border-radius: 4px;
        margin-bottom: 12px;
    }

    button {
        width: 100%;
        padding: 10px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }
</style>

<h1>Welcome to the Dashboard</h1>

<div class="user-info">
    <p>Session: @ViewBag.MySession</p>
    <p>User Role: @ViewBag.UserRole</p>
</div>

<div class="logout-link">
    <a asp-controller="Home" asp-action="Logout">Logout</a>
</div>

<form asp-controller="Home" asp-action="SearchBooks" method="post">
    <div class="form-group">
        <label for="PolicyTopic">Select Policy Topic:</label>
        @Html.DropDownList("PolicyTopic", ViewBag.PolicyTopics as SelectList, "Choose Policy Topic", new { @id = "PolicyTopic" })
    </div>

    <div class="form-group">
        <label for="HrPolicy">Select HR Policy:</label>
        @Html.DropDownList("HrPolicy", ViewBag.HrPolicies as SelectList, "Choose HR Policy", new { @id = "HrPolicy" })
    </div>

    <div class="form-group">
        <label for="wordToSearch">Enter Word to Search:</label>
        <input type="text" id="wordToSearch" name="wordToSearch">
    </div>

    <div class="form-group">
        <button type="submit">Search</button>
    </div>
</form>
